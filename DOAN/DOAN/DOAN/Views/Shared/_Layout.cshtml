<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/css4.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        #main {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        #header {
            background-color: darkblue;
            color: #fff;
            padding: 10px;
        }

        #content {
            background-color: #fff;
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            padding-top: 70px; /* Adjust this value based on the height of the fixed header */
        }

        .main-content-pro {
            display: flex;
            flex-direction: row;
            flex-wrap: wrap;
        }

        .input-text {
            color: black;
        }

        .footer-title {
            background-color: black;
            color: #fff;
            padding: 10px;
        }

        /* New CSS for fixed header */
        .fixed {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div id="main">
        <div id="header" style="background-color: darkblue; color: #fff;">
            <a href="/Phong1s/ListPhong"><img src="~/Content/images/logo1.jpg" style="width:8%; height:8%" /></a>

            <ul id="nav">
                <li><a href="">Trang chủ</a></li>
                @*<li><a href="">Giới thiệu</a></li>*@
                @*<li><a href="">Dịch vụ</a></li>
                <li><a href="">Dự án</a></li>
                <li><a href="">Liên hệ</a></li>*@
                <li><a href="~/Customers/LoginCus">Đăng Nhập</a></li>
                <li><a href="~/Customers/Logout">Đăng Xuất</a></li>
                <li class="format-hello">

                </li>

            </ul>
        </div>
        <div id="content" style="background-color: white; color: #000;">
            <table align="center">
                <tr>
                    <td>
                        <div class="slider">
                            <div class="slides">
                                <input type="radio" name="radio-btn" id="radio1">
                                <input type="radio" name="radio-btn" id="radio2">
                                <input type="radio" name="radio-btn" id="radio3">
                                <input type="radio" name="radio-btn" id="radio4">
                                <div class="slide first">
                                    <img src="/Content/images/a1.jpg" alt="">
                                </div>
                                <div class="slide">
                                    <img src="/Content/images/a2.jpg" alt="">
                                </div>
                                <div class="slide">
                                    <img src="/Content/images/a3.jpg" alt="">
                                </div>
                                <div class="slide">
                                    <img src="/Content/images/a4.jpg" alt="">
                                </div>
                                <div class="navigation-auto">
                                    <div class="auto-btn1"></div>
                                    <div class="auto-btn2"></div>
                                    <div class="auto-btn3"></div>
                                    <div class="auto-btn4"></div>
                                </div>
                            </div>
                            <div class="navigation-manual">
                                <label for="radio1" class="manual-btn"></label>
                                <label for="radio2" class="manual-btn"></label>
                                <label for="radio3" class="manual-btn"></label>
                                <label for="radio4" class="manual-btn"></label>
                            </div>
                        </div>
                        <script type="text/javascript">
                            var counter = 1;
                            setInterval(function () {
                                document.getElementById('radio' + counter).checked = true;
                                counter++;
                                if (counter > 4) {
                                    counter = 1;
                                }
                            }, 2000);
                        </script>
                    </td>
                </tr>
            </table>
            @RenderBody();
        </div>

        <div class="footer-title" style="background-color: darkblue; color: #fff;">
            <div class="social">
                <h2>Theo Dõi Chúng Tôi</h2>
                <div class="icons">
                    <a href="https://portal.huflit.edu.vn/"><ion-icon name="logo-facebook"></ion-icon></a>
                    <a href="https://portal.huflit.edu.vn/"><ion-icon name="logo-instagram"></ion-icon></a>
                    <a href="https://portal.huflit.edu.vn/"><ion-icon name="logo-twitter"></ion-icon></a>
                    <a href="https://portal.huflit.edu.vn/"><ion-icon name="logo-google"></ion-icon></a>
                    <a href="https://portal.huflit.edu.vn/"><ion-icon name="logo-skype"></ion-icon></a>
                </div>
            </div>
            <div class="help"></div>
            <div class="contact_us"></div>

            <div class="help">
                <h2>Hướng Dẫn</h2>
                <ul class="de-muc">
                    <li><a href="https://portal.huflit.edu.vn/">Điều Khoản</a></li>
                    <li><a href="https://portal.huflit.edu.vn/">Hướng Dẫn Mua Hàng</a></li>
                    <li><a href="https://portal.huflit.edu.vn/">Chính Sách Đổi Trả Hàng</a></li>
                    <li><a href="https://portal.huflit.edu.vn/">Bảo Mật Thông Tin Khách Hàng</a></li>
                    <li><a href="https://portal.huflit.edu.vn/">Chính Sách Thanh Toán</a></li>
                </ul>
            </div>
            <div class="contact_us">
                <h2>Liên Hệ</h2>
                <ul class="de-muc">
                    <li><a href="https://portal.huflit.edu.vn/">Cơ sở 1: <span style="font-weight: bold;">828 Sư Vạn Hạnh, phường 13, quận 10, TPHCM</span></a></li>
                    <li><a href="https://portal.huflit.edu.vn/">Cơ sở 2: <span style="font-weight: bold;">10 Quốc Lộ 22, phường Tân Xuân, thị trấn Hóc Môn, TPHCM</span></a></li>
                    <li><a href="#">Điện Thoại: <span style="font-weight: bold;">0123456789</span></a></li>
                    <li>
                        <a>
                            Email: <span style="font-weight: bold;">nhadep@gmail.com</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <script>
        var header = document.getElementById("header");
        var sticky = header.offsetTop;

        window.onscroll = function () {
            if (window.pageYOffset > sticky) {
                header.classList.add("fixed");
            } else {
                header.classList.remove("fixed");
            }
        };
    </script>
</body>
<script src="https://unpkg.com/ionicons@5.4.0/dist/ionicons.js"></script>
</html>