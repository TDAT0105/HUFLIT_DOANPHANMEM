@model DOAN.Models.Phong

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa phòng</h2>

<h3>Bạn có chắc là muốn xóa phòng này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên phòng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenPhong)
        </dd>

        <dt>
            Diện tích
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DienTich)
        </dd>

        <dt>
            Miêu tả
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Decription)
        </dd>

        <dt>
            Giá
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.Price) VNĐ
        </dd>

        <dt>
            Trạng thái
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TrangThai)
        </dd>

        <dt>
            Hình phòng 1
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImagePhong1)
        </dd>

        <dt>
            Hình phòng 2
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImagePhong2)
        </dd>

        <dt>
            Hình phòng 3
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImagePhong3)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <br />
            <br />
            @Html.ActionLink("Quay về", "Index")
        </div>
    }
</div>
