@model DOAN.Models.HopDong

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chi tiết hợp đồng</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Ngày bắt đầu hợp đồng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayBatDau)
        </dd>

        <dt>
            Ngày kết thúc hợp đồng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NgayKetThuc)
        </dd>

        <dt>
            Tiền cọc
        </dt>

        <dd>
            @String.Format("{0:0,0}", Model.TienCoc) VNĐ
        </dd>

        <dt>
            Tên khách thuê
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Customer.NameCus)
        </dd>

        <dt>
            Tên phòng
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Phong.TenPhong)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Quay về", "Index")
</p>
