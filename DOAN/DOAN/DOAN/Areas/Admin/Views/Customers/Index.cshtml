@model IEnumerable<DOAN.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Khách thuê</h2>

<p>
    @Html.ActionLink("Thêm khách thuê mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Tên khách thuê
        </th>
        <th>
            Giới tính
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Email
        </th>
        <th>
            Tình trạng thê
        </th>
        <th>
            Tên phòng khách thuê
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GioiTinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EmailCus)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TinhTrangThue)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phong.TenPhong)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.CCCD }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.CCCD }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.CCCD })
        </td>
    </tr>
}

</table>
